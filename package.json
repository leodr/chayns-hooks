{
	"name": "chayns-hooks",
	"version": "1.0.0",
	"private": false,
	"description": "Makes the chayns-js API easier to consume in your react components.",
	"homepage": "https://github.com/leodr/chayns-hooks#readme",
	"bugs": {
		"url": "https://github.com/leodr/chayns-hooks/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/leodr/chayns-hooks.git"
	},
	"license": "MIT",
	"author": "Leo Driesch",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "yarn clean && tsc",
		"clean": "rimraf dist",
		"docgen": "rimraf docs && typedoc",
		"format": "prettier . --write",
		"lint": "tsc --noEmit && eslint src"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"extends": [
			"standard-with-typescript",
			"plugin:react-hooks/recommended",
			"prettier",
			"prettier/@typescript-eslint"
		]
	},
	"devDependencies": {
		"@types/react": "^16.9.46",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-standard-with-typescript": "^18.0.2",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react-hooks": "^4.0.8",
		"eslint-plugin-standard": "^4.0.1",
		"prettier": "^2.0.5",
		"prettier-plugin-packagejson": "^2.2.5",
		"rimraf": "^3.0.2",
		"typedoc": "^0.18.0",
		"typedoc-plugin-markdown": "^2.4.0",
		"typescript": "^3.9.7"
	}
}
